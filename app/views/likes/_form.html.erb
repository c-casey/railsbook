<%= turbo_frame_tag "#{likeable.class.to_s.downcase}_#{likeable.id}_like_form" do %>
  <%= form_with url: polymorphic_path([likeable, Like]) do |f| %>
    <%= f.hidden_field :likeable_id, value: likeable.id %>
    <%= f.hidden_field :likeable_type, value: likeable.class %>
    <%= f.submit like_button_text(likeable),
     id: "#{likeable.class.to_s.downcase}_#{likeable.id}_like_button",
     class: "button" %>
  <% end %>
<% end %>

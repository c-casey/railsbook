<%= turbo_frame_tag "new_post" do %>
  <%= form_with model: @post,
    data: { controller: "submission", action: "turbo:submit-end->submission#clear" }  do |post_form| %>
    <%= post_form.text_area :content,
     class: "textarea has-fixed-size",
     placeholder: "Share what you're thinking",
     data: { submission_target: "textarea" } %>
    <%= post_form.submit "Create Post", class: "button is-primary" %>
  <% end %>
<% end %>

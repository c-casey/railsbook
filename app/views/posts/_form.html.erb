<%= form_with model: @post,
   data: { controller: "submission", action: "turbo:submit-end->submission#clear input->submission#toggleButton" } do |post_form| %>
  <%= post_form.text_area :content,
     class: "textarea has-fixed-size",
     placeholder: "Share what you're thinking",
     data: { submission_target: "textarea" } %>
  <%= post_form.submit class: "button is-primary", disabled: true, data: { submission_target: "button" } %>
<% end %>
